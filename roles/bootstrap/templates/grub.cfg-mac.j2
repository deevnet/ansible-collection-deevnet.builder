# GRUB2 MAC-specific Boot Configuration
# Managed by Ansible - DO NOT EDIT MANUALLY
# Host: {{ item.hostname }}
# MAC: {{ item.mac }}

set default=0
set timeout=0

menuentry "{{ item.image_name }}" {
    linux /{{ item.dest_subdir }}/vmlinuz \
        ip=dhcp \
        rd.neednet=1 \
        {{ item.boot_options }}
    initrd /{{ item.dest_subdir }}/initrd.img
}
